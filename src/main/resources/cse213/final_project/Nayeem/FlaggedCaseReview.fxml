<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400" prefWidth="650" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="cse213.final_project.Nayeem.FlaggedDisputeCaseReviewController">
    <Label layoutX="200" layoutY="20" style="-fx-font-size: 18px;" text="Flagged and Disputed Cases" />

    <Label layoutX="40" layoutY="80" text="Case ID:" />
    <TextField fx:id="caseIdField" layoutX="150" layoutY="75" prefWidth="200" />

    <Label layoutX="40" layoutY="120" text="Application ID:" />
    <TextField fx:id="applicationIdField" layoutX="150" layoutY="115" prefWidth="200" />

    <Label layoutX="40" layoutY="160" text="Reason for Flag:" />
    <TextArea fx:id="flaggedReasonField" layoutX="150" layoutY="155" prefHeight="60" prefWidth="400" />

    <Button layoutX="40" layoutY="240" onAction="#requestDocsOnAction" text="Request More Documents" />
    <Button layoutX="220" layoutY="240" onAction="#approveFlaggedCaseOnAction" text="Approve Application" />
    <Button layoutX="400" layoutY="240" onAction="#forwardCaseOnAction" text="Forward to Appeal Committee" />

    <Label fx:id="statusLabel" layoutX="40" layoutY="300" style="-fx-text-fill: blue;" />
   <Button layoutX="31.0" layoutY="350.0" onAction="#backOnAction" prefHeight="27.0" prefWidth="95.0" text="Back" />
</AnchorPane>
