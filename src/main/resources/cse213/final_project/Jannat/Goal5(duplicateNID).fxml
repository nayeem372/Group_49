<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="333.0" prefWidth="524.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="cse213.final_project.Jannat.Goal5duplicateNidController">

    <!-- Event-3: Fill NID Details -->
    <Label layoutX="42.0" layoutY="45.0" text="Enter U-NID Number:" />
    <TextField fx:id="nidNumberTextField" layoutX="172.0" layoutY="45.0" />

    <Label layoutX="42.0" layoutY="85.0" text="Enter Full Name:" />
    <TextField fx:id="fullNameTextField" layoutX="172.0" layoutY="85.0" />

    <Label layoutX="42.0" layoutY="125.0" text="Enter Address:" />
    <TextField fx:id="addressTextField" layoutX="172.0" layoutY="125.0" />

    <Label layoutX="42.0" layoutY="165.0" text="Specify if NID is lost:" />
    <ComboBox fx:id="nidStatusComboBox" layoutX="172.0" layoutY="165.0">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Lost" />
                <String fx:value="Found" />
            </FXCollections>
        </items>
    </ComboBox>

    <!-- Event-4: Submit Loss Report -->
    <Label layoutX="42.0" layoutY="205.0" text="Upload Loss Report:" />
    <Button layoutX="172.0" layoutY="205.0" onAction="#handleFileUploadButtonAction" text="Upload Loss Report" />

    <!-- Event-5: Initial Verification -->
    <Button layoutX="172.0" layoutY="245.0" onAction="#submitForVerificationButtonAction" text="Submit for Verification" />
</AnchorPane>
