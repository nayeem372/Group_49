<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="508.0" prefWidth="707.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cse213.final_project.sadika.updateServiceController">
    <children>

            <Label layoutX="220.0" layoutY="22.0" prefHeight="27.0" prefWidth="211.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Update Service Request" />

         <!-- Event 1: Receive service request -->
         <Label layoutX="38.0" layoutY="68.0" text="Service Request Details:" />
         <TextArea fx:id="requestDetailsArea" layoutX="49.0" layoutY="93.0" prefRowCount="3" promptText="Enter the citizen's service request..." />

         <!-- Event 2: Verify user identity -->
         <Label layoutX="38.0" layoutY="174.0" text="Citizen NID Number or Previous Application ID:" />
         <TextField fx:id="nidField" layoutX="39.0" layoutY="198.0" prefHeight="26.0" prefWidth="478.0" promptText="Enter NID or Application ID" />

         <Button layoutX="39.0" layoutY="241.0" onAction="#handleVerifyIdentity" text="Verify Identity" />

         <!-- Event 3: Update Request Status -->
         <Label layoutX="39.0" layoutY="280.0" text="Update Request Status:" />
         <ComboBox fx:id="statusComboBox" layoutX="34.0" layoutY="310.0" prefHeight="26.0" prefWidth="303.0" promptText="Select new status">
             <items>
                 <FXCollections fx:factory="observableArrayList">
                     <String fx:value="Pending" />
                     <String fx:value="In Progress" />
                     <String fx:value="Resolved" />
                     <String fx:value="Rejected" />
                 </FXCollections>
             </items>
         </ComboBox>
         <Button layoutX="39.0" layoutY="350.0" onAction="#handleUpdateStatus" text="Update Status" />

         <!-- Event 4: Send confirmation -->
         <Button layoutX="38.0" layoutY="395.0" onAction="#handleSendConfirmation" text="Send Confirmation to Citizen" />
    </children>
</AnchorPane>
