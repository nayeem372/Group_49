<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="450" prefWidth="650" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="cse213.final_project.sadika.trackApplicationStatusController">

    <Label layoutX="193.0" layoutY="24.0" style="-fx-font-size: 18px;" text="Track NID Application Status" />

    <Label layoutX="20" layoutY="70" text="Enter Applicant ID:" />
