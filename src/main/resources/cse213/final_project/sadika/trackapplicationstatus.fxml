    <Label layoutX="20" layoutY="170" text="Next Steps:" />
    <TextArea fx:id="nextStepsTextArea" editable="false" layoutX="14.0" layoutY="185.0" prefHeight="80" prefWidth="600" wrapText="true" />

    <Button layoutX="11.0" layoutY="275.0" onAction="#informUserOnAction" prefWidth="220" text="Inform User of Status" />
    <Button layoutX="242.0" layoutY="275.0" onAction="#explainNextStepsOnAction" prefWidth="220" text="Explain Next Steps" />
   <Button layoutX="470.0" layoutY="275.0" mnemonicParsing="false" onAction="#backOnAction" prefHeight="25.0" prefWidth="166.0" text="BACK" />

</AnchorPane>
