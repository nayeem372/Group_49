<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="450" prefWidth="650" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="cse213.final_project.sadika.guideNIDApplicationProcessController">

    <Label layoutX="20" layoutY="20" style="-fx-font-size: 18px;" text="Guide Users - NID Application Process" />

    <Label layoutX="20" layoutY="70" text="Application Steps Overview:" />
    <TextArea fx:id="stepsOverviewArea" editable="false" layoutX="20" layoutY="100" prefHeight="100" prefWidth="600" wrapText="true" />

    <Label layoutX="20" layoutY="220" text="Required Documents Checklist:" />
    <TextArea fx:id="documentsChecklistArea" editable="false" layoutX="20" layoutY="250" prefHeight="80" prefWidth="600" wrapText="true" />

    <Label layoutX="20" layoutY="350" text="Assistance with Form Filling:" />
    <Button layoutX="20" layoutY="380" onAction="#assistFormFillingOnAction" prefWidth="220" text="Assist with Application Form" />

    <Label layoutX="300" layoutY="350" text="Uploaded Documents Verification:" />
    <Button layoutX="300" layoutY="380" onAction="#verifyDocumentsOnAction" prefWidth="220" text="Verify Uploaded Documents" />
   <Button layoutX="558.0" layoutY="380.0" mnemonicParsing="false" onAction="#backOnAction" text="Back" />

</AnchorPane>
